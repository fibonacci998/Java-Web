<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AddNewJobServlet</servlet-name>
        <servlet-class>controller.AddNewJobServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowAllEmpServlet</servlet-name>
        <servlet-class>controller.ShowAllEmpServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>test</servlet-name>
        <servlet-class>controller.test</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadBeforeAssignServlet</servlet-name>
        <servlet-class>controller.LoadBeforeAssignServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AssignJobServlet</servlet-name>
        <servlet-class>AssignJobServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddNewJobServlet</servlet-name>
        <url-pattern>/AddNewJobServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowAllEmpServlet</servlet-name>
        <url-pattern>/ShowAllEmpServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>test</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadBeforeAssignServlet</servlet-name>
        <url-pattern>/LoadBeforeAssignServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AssignJobServlet</servlet-name>
        <url-pattern>/AssignJobServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
